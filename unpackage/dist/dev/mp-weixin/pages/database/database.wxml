vent']]]]]}}" bindscroll="__e"><view hidden="{{!(act==0)}}" class="list" id="Hero"><view class="contentList"><block wx:for="{{heroDatas}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['goPeoDetail',['$0'],[[['heroDatas','',index,'heroId']]]]]]]}}" class="liA" bindtap="__e"><image src="{{item.skins[0].big}}" mode="aspectFill" lazy-load="{{true}}"></image><view class="name">{{item.name}}</view></view></block></view></view><view hidden="{{!(act==1)}}" class="list" id="Goods"><view class="contentList"><block wx:for="{{goodsDatas}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['showDetail',['goods','$0'],[[['goodsDatas','',index,'itemId']]]]]]]}}" class="liB" bindtap="__e"><image src="{{'https://cdn.tinytiger.cn/lolitem/'+item.itemId+'.png'}}" mode="aspectFill" lazy-load="{{true}}"></image><view class="name">{{item.name}}</view></view></block></view></view><view hidden="{{!(act==2)}}" class="list" id="Skill"><view class="contentList"><block wx:for="{{skillDatas}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['showDetail',['skill','$0'],[[['skillDatas','',index,'pic']]]]]]]}}" class="liB" bindtap="__e"><image src="{{'https://cdn.tinytiger.cn/lolrunes/'+item.pic+'.png'}}" mode="aspectFill" lazy-load="{{true}}"></image><view class="name">{{item.name}}</view></view></block></view></view><view hidden="{{!(act==3)}}" class="list" id="Rune"><view class="contentList"><block wx:for="{{runeDatas}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['showDetail',['rune','$0'],[[['runeDatas','',index,'runeId']]]]]]]}}" class="liB" bindtap="__e"><image src="{{'https://cdn.tinytiger.cn/lolspell/'+item.runeId+'.png'}}" mode="aspectFill" lazy-load="{{true}}"></image><view class="name">{{item.name}}</view></view></block></view></view></scroll-view></view>