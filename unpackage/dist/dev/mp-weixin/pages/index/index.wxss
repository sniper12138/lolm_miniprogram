page {
  width: 100%;
  height: 100%;
}
page .content {
  width: 100%;
  padding-bottom: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  position: relative;
  overflow: hidden;
}
page .content .topMask {
  width: 100%;
  height: 180rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #ffe006;
  z-index: 99;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  padding: 110rpx 0 0 20rpx;
}
page .content .topMask .title {
  color: #000;
  font-size: 36rpx;
}
page .content .topMask::before {
  content: '';
  position: absolute;
  background: rgba(255, 255, 255, 0.2);
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  right: -320rpx;
  top: -200rpx;
}
page .content .top {
  padding: 220rpx 15rpx 100rpx;
  background: #ffe006;
}
page .content .top::before {
  content: '';
  position: absolute;
  background: rgba(255, 255, 255, 0.2);
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  right: -320rpx;
  top: -200rpx;
}
page .content .top .swiper {
  position: relative;
}
page .content .top .swiper swiper {
  height: 280rpx;
}
page .content .top .swiper swiper .swiper-item {
  width: 100%;
  height: 280rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
page .content .top .swiper swiper .swiper-item image {
  width: 98%;
  height: 98%;
  margin: 0 auto;
  display: block;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.6);
}
page .content .top .top-bar {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  padding: 20rpx 0 0 0;
}
page .content .top .top-bar .li {
  width: 25%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 10rpx 20rpx;
}
page .content .top .top-bar .li image {
  width: 120rpx;
}
page .content .top .top-bar .li .name {
  padding-top: 15rpx;
  color: #333333;
  font-size: 24rpx;
}
page .content .scrollView {
  background: #fff;
  z-index: 2;
  padding: 35rpx;
  border-radius: 25rpx 25rpx 0 0;
  margin-top: -80rpx;
}
page .content .scrollView .noborder {
  border: none;
}
page .content .scrollView list.noborder {
  border: none;
}
page .content .scrollView list.noborder .list {
  border: none;
}

