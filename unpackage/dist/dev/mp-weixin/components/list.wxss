.list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #f2f2f2;
}
.list .left {
  width: 70%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.list .left .title {
  font-size: 30rpx;
  color: #000;
}
.list .left .auth {
  font-size: 24rpx;
  color: #999999;
  padding-top: 10rpx;
}
.list .right {
  width: 30%;
  height: 100%;
  padding: 0 0 0 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.list .right .img {
  width: 100%;
  height: 140rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.list .right .img easy-loadimage {
  width: 100%;
  height: 140rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: block;
}
.list .right .img easy-loadimage .easy-loadimage {
  width: 100%;
  height: 140rpx;
  border-radius: 10rpx;
}
.list .right .img image {
  width: 100%;
  height: 140rpx;
  border-radius: 10rpx;
}

